   <% @order.line_items.each do |item| %>
   
<tr>
  <td>
    <%= image_tag item.product.image.tiny %>
  </td>
  <td>
    <h4><%= item.product.name %></h4>
    <br> Description: 
    <p><%= item.product.description %></p>
  </td>
  <td> Product Price:
    <%= item.product.price %>
  </td>
    <td>Quantity: 
    <%= item.quantity %>
  </td>
  <td> Subtotal for Product:
    <%= item.product.price * item.quantity %>
  </td>
</tr>

<%end%>